<h1>All Shelters</h1>

<%= link_to "New Shelter", "/shelters/new" %>

<% @shelters.each do |shelter| %>
  <h3><%= shelter.name %></h3>
  <p><%= shelter.address %></p>
  <p><%= shelter.city %>, <%= shelter.state %> <%= shelter.zip %></p>
  <p><%= link_to "More information", "/shelters/#{shelter.id}" %></p>
<% end %>
